{
  "name": "titan blast",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared",
    "auth"
  ],
  "scripts": {
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start:map-maker": "cd map-maker && npm start",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:map-maker": "cd map-maker && npm run build",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:map-maker": "cd map-maker && npm run dev",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "lint:map-maker": "cd map-maker && npm run lint",
    "format:client": "cd client && npm run format",
    "format:server": "cd server && npm run format",
    "format:shared": "cd shared && npm run format",
    "format:map-maker": "cd map-maker && npm run format",
    "dev:all": "npm-run-all --parallel dev:client dev:server",
    "lint:all": "npm-run-all --parallel lint:client lint:server lint:shared",
    "format:all": "npm-run-all --parallel format:client format:server format:shared",
    "clean:all": "rm -rf node_modules package-lock.json auth/node_modules auth/package-lock.json server/node_modules server/package-lock.json client/node_modules client/package-lock.json shared/node_modules shared/package-lock.json && rm -rf auth/dist auth/*.tsbuildinfo server/dist server/*.tsbuildinfo client/dist client/*.tsbuildinfo shared/dist shared/*.tsbuildinfo && rm -rf dist *.tsbuildinfo && echo 'All node_modules, package-lock.json, dist folders, and tsbuildinfo files have been deleted from all workspaces.'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "madge": "^8.0.0",
    "npm-run-all": "^4.1.5"
  }
}
