{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "start": "node dist/server.js",
    "build": "npm run clean && npm run build:shared && tsc",
    "dev": "npm run clean && npm run build:shared && nodemon --watch src --watch ../shared/src --exec ts-node -r tsconfig-paths/register src/server.ts",
    "lint": "eslint --config ../eslint.config.mjs 'src/**/*.{js,ts}'",
    "lint:fix": "eslint --config ../eslint.config.mjs 'src/**/*.{js,ts}' --fix",
    "format": "prettier --config ../.prettierrc --write 'src/**/*.{js,ts,json,css,md}'",
    "build:shared": "cd ../shared && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@dimforge/rapier2d-compat": "^0.18.0-beta.0",
    "@geckos.io/server": "^3.0.2",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "shared": "file:../shared"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@types/express": "^5.0.1",
    "@types/cors": "^2.8.18",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2"
  }
}
